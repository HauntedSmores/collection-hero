{
  "name": "collection-hero",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@shopify/polaris": "^3.3.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cookie": "^0.3.1",
    "elasticsearch": "^15.2.0",
    "express": "^4.16.4",
    "nonce": "^1.0.4",
    "react": "^16.6.3",
    "react-chips": "^0.8.0",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "read-yaml": "^1.1.0",
    "shopify-api-node": "^2.17.0",
    "shopify-node-api": "^1.10.0",
    "tailwindcss": "^0.7.3",
    "write-yaml": "^1.0.0"
  },
  "scripts": {
    "server": "nodemon --exec babel-node server/index.js",
    "build-server": "rm -rf dist && mkdir dist && babel server/index.js -o dist/server.js",
    "tailwind:css": "tailwind build src/styles/tailwind.src.css -c tailwind.js -o src/styles/tailwind.css",
    "start": "npm run tailwind:css && react-scripts start",
    "build": "npm run tailwind:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "dotenv": "^6.2.0",
    "http-proxy-middleware": "^0.19.1",
    "nodemon": "^1.18.9"
  },
  "proxy": "http://localhost:5000",
  "nodemonConfig": {
    "ignore": [
      "src/*"
    ]
  }
